@model IEnumerable<CStructorSite.Models.Class>

@{
    ViewData["Title"] = "Enroll";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Enroll</title>
</head>
<body>
    <h4>Class</h4>
    <hr />
    <p class="alert-warning">@ViewBag.ErrorMessage</p>
    @using (Html.BeginForm())
    {
        @Html.DropDownList("ClassId", Model.Select(item => new SelectListItem
        {
            Value = item.ClassId.ToString(),
            Text = item.ClassName
        }))
        <button class="btn btn-primary" type="submit">Enroll</button>
    }
    <a asp-action="Index">Back to List</a>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
